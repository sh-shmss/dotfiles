# Common settings
set editor="vim"
unset imap_passive
set imap_keepalive =300
set mail_check =120
set header_cache="~/.cache/mutt"
set imap_check_subscribed
set ssl_force_tls="yes"
set smtp_authenticators="login"
set realname="Shayan Shamskolahi"
source "gpg -dq /home/shayan/.mutt/.my-pwds.gpg |"

## ACCOUNT1
source "~/.mutt/personal"
folder-hook $folder 'source ~/.mutt/personal'


## ACCOUNT2
source "~/.mutt/school"
folder-hook $folder 'source ~/.mutt/school'

# Shortcuts
macro index,pager <f2> '<sync-mailbox><enter-command>source ~/.mutt/personal<enter><change-folder>!<enter>'
macro index,pager <f3> '<sync-mailbox><enter-command>source ~/.mutt/school<enter><change-folder>!<enter>'

